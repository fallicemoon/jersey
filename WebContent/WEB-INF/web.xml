<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>jersey</display-name>
	<welcome-file-list>
		<welcome-file>/WEB-INF/pages/index.jsp</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/pages/error.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/pages/error.jsp</location>
	</error-page>

	<context-param>
		<param-name>user</param-name>
		<param-value>jersey</param-value>
	</context-param>
	<context-param>
		<param-name>password</param-name>
		<param-value>white</param-value>
	</context-param>
	<context-param>
		<param-name>db_driver</param-name>
		<param-value>org.mariadb.jdbc.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>db_url</param-name>
		<param-value>jdbc:mariadb://localhost:3307/jersey</param-value>
	</context-param>
	<context-param>
		<param-name>db_user</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>db_password</param-name>
		<param-value>qwerty</param-value>
	</context-param>

	<servlet>
		<description></description>
		<display-name>OtherServlet</display-name>
		<servlet-name>OtherServlet</servlet-name>
		<servlet-class>tools.OtherServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>OtherServlet</servlet-name>
		<url-pattern>/OtherServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>SellCaseServlet</display-name>
		<servlet-name>SellCaseServlet</servlet-name>
		<servlet-class>sellCase.controller.SellCaseServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SellCaseServlet</servlet-name>
		<url-pattern>/SellCaseServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>CommodityServlet</display-name>
		<servlet-name>CommodityServlet</servlet-name>
		<servlet-class>commodity.controller.CommodityServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CommodityServlet</servlet-name>
		<url-pattern>/CommodityServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>PurchaseCaseServlet</display-name>
		<servlet-name>PurchaseCaseServlet</servlet-name>
		<servlet-class>purchaseCase.controller.PurchaseCaseServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PurchaseCaseServlet</servlet-name>
		<url-pattern>/PurchaseCaseServlet</url-pattern>
	</servlet-mapping>
	<filter>
		<display-name>JerseyFilter</display-name>
		<filter-name>JerseyFilter</filter-name>
		<filter-class>tools.JerseyFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>JerseyFilter</filter-name>
		<url-pattern>/index.jsp</url-pattern>
		<url-pattern>/purchaseCase/*</url-pattern>
		<url-pattern>/sellCase/*</url-pattern>
		<url-pattern>/commodity/*</url-pattern>
		<url-pattern>/picture/*</url-pattern>
		<url-pattern>/store/*</url-pattern>
		<url-pattern>/accounting/*</url-pattern>
		<url-pattern>/CommodityServlet</url-pattern>
		<url-pattern>/PurchaseCaseServlet</url-pattern>
		<url-pattern>/SellCaseServlet</url-pattern>
		<url-pattern>/StoreServlet</url-pattern>
		<url-pattern>/OtherServlet</url-pattern>
		<url-pattern>/PictureServlet</url-pattern>
	</filter-mapping>
	<servlet>
		<description></description>
		<display-name>StoreServlet</display-name>
		<servlet-name>StoreServlet</servlet-name>
		<servlet-class>store.controller.StoreServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StoreServlet</servlet-name>
		<url-pattern>/StoreServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>LoginServlet</display-name>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>tools.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>PictureServlet</display-name>
		<servlet-name>PictureServlet</servlet-name>
		<servlet-class>picture.controller.PictureServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PictureServlet</servlet-name>
		<url-pattern>/PictureServlet</url-pattern>
	</servlet-mapping>


	<resource-ref>
		<res-ref-name>jdbc/jersey</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>